   <section>
      <div class="row">

      <% @products.each do |product| %>

        <div class="col-sm-3">
          <div class="product_single">
           <a href="/products/<%= product.id %>" title="Click to Product"><h2><%= product.name %></h2></a>
            <p>Only $<%= product.price %></p>
            <a href="/products/<%= product.id %>" title="View Product"><img src="<%= product.image %>" alt="<%= product.name %>" class="img-responsive product_single_image"></a>
           <!-- <p>Description: <%= product.description %></p> --> 
          </div>
        </div>
      <% end %>
      
      </div>
    </section>
    <%= link_to "Add New Product", "products/new" %>





