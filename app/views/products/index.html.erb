<h1> All Available Products</h1>

<%= link_to "Add New Product", "/products/new" %>

<% @products.each do |product| %>
  <h2><%= link_to product.name, "/products/#{product.id}" %></h2>
  <h3><%= product.price %></h3>
  <h4><%= product.image %></h4>
  <h4><%= product.description %></h4>
  <hr>
<% end %>

